<h1>Login</h1>
<%- messages() %>
<div class="login">
    <form action="/account/login" method="post">
        <label for="account_email">Email:</label>
        <input type="email" id="account_email" name="account_email" required>
        <label for="account_password">Password:</label>
        <input type="password" id="account_password" name="account_password" pattern="(?=^.{8,}$)(?=.*\d)(?=.*\W+)(?![.\n])(?=.*[A-Z])(?=.*[a-z]).*$" required>
        <button type="submit" class="button">Login</button>
        <input type="hidden" name="action" value="login">
    </form>
    <p class="sign-up">Not account? <a href="/account/registration">Sign-up</a></p>
</div>