<h1>Login</h1>
<%- messages() %>
<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>
<div class="formContainer">
    <form id="loginForm" action="/account/login" method="post">
        <label for="account_email">Email:</label>
        <input type="email" id="account_email" name="account_email" value="<%= locals.account_email %>" required>
        <label for="account_password">Password:</label>
        <input type="password" id="account_password" name="account_password" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" required>
        <span id="passwordButton">Show Password</span>
        <button type="submit" class="button">Login</button>
    </form>
    <p class="redirect">No account? <a href="/account/register">Sign-up</a></p>
</div>
<script src="/js/script.js"></script>