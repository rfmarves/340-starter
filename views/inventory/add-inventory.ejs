<%# Content Heading block %>
<% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>
<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<%# messages() %>

<%# Add Inventory form %>
<div class="formContainer">
    <form id="classificationForm" action="/inv/add-inventory" method="post">
        <label for="classification_name">Vehicle information:</label>
        <label for="inv_make">Make:</label>
        <input type="text" id="inv_make" name="inv_make" pattern="^[a-zA-Z0-9]{3,}$" placeholder="Make" value="<%= locals.inv_make %>" required>
        <label for="inv_model">Model:</label>
        <input type="text" id="inv_model" name="inv_model" pattern="^[a-zA-Z0-9]{1,}$" placeholder="Model" value="<%= locals.inv_model %>" required>
        <label for="inv_year">Year:</label>
        <input type="number" id="inv_year" name="inv_year" min="1886" placeholder="Year" value="<%= locals.inv_year %>" required>
        <label for="inv_description">Description:</label>
        <input type="text" id="inv_description" name="inv_description" pattern="^[a-zA-Z0-9]{10,}$" placeholder="Description" value="<%= locals.inv_description %>" required>
        <label for="inv_price">Price:</label> 
        <input type="number" id="inv_price" name="inv_price" min="0" step="0.01" placeholder="Price" value="<%= locals.inv_price %>" required>
        <label for="inv_miles">Miles:</label>
        <input type="number" id="inv_miles" name="inv_miles" min="0" placeholder="Miles" value="<%= locals.inv_miles %>" required>
        <label for="inv_color">Color:</label>
        <input type="text" id="inv_color" name="inv_color" pattern="^[a-zA-Z]{3,}$" placeholder="Color" value="<%= locals.inv_color %>" required>
        <label for="classification_id">Classification:</label>
        <%- classificationSelectList %>
        <label for="inv_image">Image:</label>
        <input type="text" id="inv_image" name="inv_image" pattern="^(?:png|jpg|jpeg|gif|svg)$" placeholder="Image URL" value="<%= locals.inv_image %>" required>
        <label for="inv_thumbnail">Thumbnail:</label>
        <input type="text" id="inv_thumbnail" name="inv_thumbnail" pattern="^(?:png|jpg|jpeg|gif|svg)$" placeholder="Thumbnail URL" value="<%= locals.inv_thumbnail %>" required>
        <button type="submit" class="button">Add</button>
    </form>
</div>
